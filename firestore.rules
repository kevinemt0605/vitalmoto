rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // MVP: reglas abiertas para desarrollo/entrega rápida.
    // WARNING: Esto permite a cualquiera leer y escribir cualquier documento.
    // Revertir a reglas más restrictivas lo antes posible.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}